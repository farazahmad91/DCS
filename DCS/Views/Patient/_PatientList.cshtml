@model IEnumerable<Entities.Patient>

@{
    ViewData["Title"] = "PatientList";
    Layout = null;
}
@if (Model == null || !Model.Any())
{
    <tr style="text-align: center;">
        <td colspan="12" style="text-align: center;">
            <label><strong>Data Not Found</strong></label>
        </td>
    </tr>
}
else
{
@foreach (var item in Model)
{
    <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
        <td>
                @if (@item.PImage.Length!=0 && @item.PImage!=null)
                {
                    <a class="fancybox" href="@item.PImage" data-fancybox data-caption="@item.Name">
                        <img src="@item.PImage" onerror="this.onerror=null;this.src='/images/noimage.jpg'" class=" rounded-circle" alt="No Image Found" width="40px" height="40px" />
                    </a>
                }
                else
                {
                    <a class="fancybox" href="@item.PImage" data-fancybox data-caption="@item.Name">
                        <img src="../assets/images/noimage.jpg" onerror="this.onerror=null;this.src='/images/noimage.jpg'" class=" rounded-circle" alt="No Image Found" width="40px" height="40px" />
                    </a>
                }
          
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Phone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EmergencyContactName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EmergencyContactPhone)
        </td>
            <td class="table-action">
                <a href="javascript:void(0);" class="action-icon"> <i class="mdi mdi-eye" onclick="PatientDetails(@item.PId)"></i></a>
                <a href="javascript:void(0);" class="action-icon"> <i class="mdi mdi-square-edit-outline" onclick="EditPatient(@item.PId)"></i></a>
               @*  <a href="javascript:void(0);" class="action-icon"> <i class="mdi mdi-delete"></i></a> *@
            </td>
    </tr>
}
}