
@{
    ViewData["Title"] = "ChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
		<div class="login-box rounded-2 p-5">
			<div class="login-form">
				<a href="index.html" class="login-logo mb-3">
					<img src="assets/images/logo-dark.svg" alt="Bootstrap Gallery" />
				</a>
				<br />
				<h6 class="fw-light mb-5">
				To access your account and initiate a password change, kindly input the current password associated with your account.
				</h6>
				<div class="mb-3">
				<label class="form-label">Current Password</label>
				<input type="text" class="form-control" id="CurrentPassword" placeholder="Enter your Current Password" />
				</div>
			<div class="mb-3">
				<label class="form-label">New Password</label>
				<input type="text" class="form-control" id="NewPassword" placeholder="Enter your New Password" />
			</div>
			<div class="d-grid pt-3" onclick="ChangePassword();">
					<button type="submit" class="btn btn-lg btn-primary">
						Submit
					</button>
				</div>
			</div>
		</div>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

<script>
	function ChangePassword() {
		debugger;
		var currentPassword = $("#CurrentPassword").val();
		var newPassword = $("#NewPassword").val();

		var formData = {
			CurrentPassword: currentPassword,
			NewPassword: newPassword
		};

		$.post("/Account/SaveChangePassword", formData).done(function (res) {

			Info(1,'Done');
			console.log(res);

		}).fail(function () {
			Hide_Loader();
			showerrors("Something went wrong!!!");
		});
	}

