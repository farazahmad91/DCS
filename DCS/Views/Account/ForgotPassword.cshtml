
@{
    ViewData["Title"] = "ForgotPassword";
    Layout = "~/Views/Shared/_Account.cshtml";
}
<style>
    .form-gap {
        padding-top: 70px;
        padding-left: 70px;
    }
</style>

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
<link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" rel="stylesheet">
<div class="form-gap"></div>
<div class="container">
    <div class="row m3">
        <div class="col-md-4 col-md-offset-4">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="text-center">
                        <h3><i class="fa fa-lock fa-4x"></i></h3>
                        <h2 class="text-center">Forgot Password?</h2>
                        <p>You can reset your password here.</p>
                        <div class="panel-body">

                            <div id="register-form" role="form" autocomplete="off" class="form" method="post">

                                <div class="form-group">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-envelope color-blue"></i></span>
                                        <input id="Email" name="Email" placeholder="email address" class="form-control" type="email">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <input name="recover-submit" onclick="sendEmail();" class="btn btn-lg btn-primary btn-block" value="Send OTP" type="submit">
                                </div>

                                <input type="hidden" class="hide" name="token" id="token" value="">
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
    function sendEmail() {
        debugger;
        var email = $("#Email").val();
        sessionStorage.setItem('email', email);
        var formData = { useremail: email };

        $.post("/Validate-Email", formData)
            .done(function (res) {
                if (res.statusCode==1) {
                    window.location.href = "/VerifyOTP";
                }
                console.log(res);
                // Optionally, you can add more logic here if needed
            })
            .fail(function () {
                showErrors("Something went wrong!!!");
            });
    }

    function otp() {
        window.location.href = "/ValidateOTP";
    }

    function showErrors(message) {
        // Implement this function to display error messages to the user
        alert(message); // Example implementation using alert
    }
</script>




