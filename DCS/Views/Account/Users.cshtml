

@{
    ViewData["Title"] = "Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content wrapper start -->
<div class="content-wrapper">
    <!-- Row start -->
    <div class="row justify-content-center">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-title">Create Invoice</div>
                </div>
                <div class="card-body">
                    <div class="create-invoice-wrapper">

<p>
    <input onclick='$("#bulkemail").modal("show");' class="btn btn-lg btn-primary" id="btnmodal" value="Create Message" type="submit">
</p>
<div>
    <input type="radio" id="singleSelect" name="selectionMode" checked>
    <label for="singleSelect">Single Select</label>
    <input type="radio" id="multiSelect" name="selectionMode">
    <label for="multiSelect">Multi Select</label>
    <input type="radio" id="selectAll" name="selectionMode">
    <label for="selectAll">Select All</label>
</div>
<table class="table" id="tbluser">
    <thead>
        <tr>
            <th hidden>
                <label>Id</label>
            </th>
            <th></th>
            <th>
                <label>Name</label>
            </th>
            <th>
                <label>Email</label>
            </th>
            <th>
                <label>Role</label>
            </th>
            <th>
                <label>Password</label>
            </th>
            <th>
                <label>Account Active</label>
            </th>
            <th>
                <label>Email Verified</label>
            </th>
            <th>
                <label>Temp Locked</label>
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>

    </tbody>
</table>
<div class="card-body">
    <div class="modal fade" id="bulkemail" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Write a message</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="container">
                        <div class="row">
                            <div class="col-sm-6">
                                <label>Subject</label>
                                <input type="text" id="txtSubject" class="form-control cls" />
                            </div>
                            <div class="col-sm-6">
                                <label>Image</label>
                                <input type="file" id="txtImage" class="form-control cls" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <label>Message</label>
                                <textarea id="txtMessage" class="form-control cls"></textarea>
                            </div>

                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="d-grid pt-3">
                                <button class="btn btn-lg btn-primary btn-block" type="button" id="btnsendEmail">
                                    <span id="sendSpin" role="status" aria-hidden="true"></span>
                                    Sending
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="card-body">
    <div class="modal fade" id="mpassword" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Mr. <span id="username"></span></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="container">
                        <center>
                            <label> Your Password: <span><strong id="decpass" style="Color:Green"></strong></span></label>
                        </center>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div></div></div></div></div></div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        loadData();
    });
    var loadData = function () {
        $.get('/_UserList').done(function (res) {
            $('#tbluser tbody').html(res);
        }).fail(function (xhr) {
             console.log(xhr.responseText);
        });
    }
     function ShowPassword(pass, name) {
        $.post('/DecriptPassword', { HashPass: pass }).done(function (res) {
            debugger;
            console.log("Decrypted password:", res);
            $("#decpass").text(res);
            $("#username").text(name);
            $("#mpassword").modal("show");
        }).fail(function (xhr) {
            console.log("Error:", xhr.responseText);
        });
    }
    function UserStatus(id) {
        var param = {
            Id: id,
            IsActive: $("#IsActive" + id).prop("checked"),
            IsVerified: $("#IsVerified" + id).prop("checked"),
            IsLocked: $("#IsLocked" + id).prop("checked"),
        };
        console.log(param);
        $.post("/UpdateUserStatus", param).done(function () {
            alert("succrssfully update");

        }).fail(function () {
            alert("error");

        })
    }
</script>