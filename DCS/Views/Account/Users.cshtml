

@{
    ViewData["Title"] = "Users";
    Layout = "~/Views/Shared/_LayoutSiteAdmin.cshtml";
}

<h1>Users</h1>

<p>
    <input onclick='$("#bulkemail").modal("show");' class="btn btn-lg btn-primary" id="btnmodal" value="Create Message" type="submit">
</p>
<div>
    <input type="radio" id="singleSelect" name="selectionMode" checked>
    <label for="singleSelect">Single Select</label>
    <input type="radio" id="multiSelect" name="selectionMode">
    <label for="multiSelect">Multi Select</label>
    <input type="radio" id="selectAll" name="selectionMode">
    <label for="selectAll">Select All</label>
</div>
<table class="table" id="tbluser">
    <thead>
        <tr>
            <th hidden>
                <label>Id</label>
            </th>
            <th></th>
            <th>
                <label>Email</label>
            </th>
            <th>
                <label>Name</label>
            </th>
            <th>
                <label>UserName</label>
            </th>
            <th>
                <label>Role</label>
            </th>
            <th>
                <label>PasswordHash</label>
            </th>
            <th>
                <label>IsActive</label>
            </th>
            <th>
                <label>IsVerified</label>
            </th>
            <th>
                <label>IsLocked</label>
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>

    </tbody>
</table>
<div class="card-body">
    <div class="modal fade" id="bulkemail" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Write a message</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="container">
                        <div class="row">
                            <div class="col-sm-6">
                                <label>Subject</label>
                                <input type="text" id="txtSubject" class="form-control cls" />
                            </div>
                            <div class="col-sm-6">
                                <label>Image</label>
                                <input type="file" id="txtImage" class="form-control cls" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <label>Message</label>
                                <textarea id="txtMessage" class="form-control cls"></textarea>
                            </div>

                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="d-grid pt-3">
                                <button class="btn btn-lg btn-primary btn-block" type="button" id="btnsendEmail">
                                    <span id="sendSpin" role="status" aria-hidden="true"></span>
                                    Sending
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="card-body">
    <div class="modal fade" id="mpassword" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Mr. <span id="username"></span> Password</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="container">
                        <label>Password: <span id="decpass"></span></label>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        loadData();
    });
    var loadData = function () {
        $.get('/_UserList').done(function (res) {
            $('#tbluser tbody').html(res);
        }).fail(function (xhr) {
             console.log(xhr.responseText);
        });
    }
</script>