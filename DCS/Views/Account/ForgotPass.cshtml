@{
    ViewData["Title"] = "ForgotPassword";
    Layout = "~/Views/Shared/_Account.cshtml";
}

<style>
    .height-100 {
        height: 100vh;
    }

    .card {
        width: 400px;
        border: none;
        height: 300px;
        box-shadow: 0px 5px 20px 0px #d2dae3;
        display: flex;
        justify-content: center;
        align-items: center;
    }

