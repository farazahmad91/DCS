<script>

    function Onload() {
        debugger;
        var param = {
            id: $("#txtid").val(),
        }
        $.post('/_SettingList', param).done(function (res) {
            $("#aSList").html(res);
        }).fail(function () {
            alert("error");
        });
    }

    Onload();

    jQuery(document).ready(function ($) {
        $("#dTable").DataTable();
    });

    function doctorDetails(Id) {
        let param = {
            id: Id,
        };
        $.post("/D-detail", param)
            .done(function (res) {
                $("#Dr_modalPV").html(res);
                $("#Dr_detailmodal").modal("show");
            })
            .fail(function () {
                alert("error");
            });
    }

    function EditAppSetting(dId) {
        let param = {
            id: dId,
        };

        $.get("/App-Setting", param)
            .done(function (res) {
                console.log(res);
                $("#Dr_modalPV").html(res);
                //$("#Dr_Editmodal").modal("show");
            })
            .fail(function (xhr) {
                console.log(xhr.statusText);
                alert("Error: " + xhr.statusText);
            })
            .catch(function (error) {
                console.error("An unexpected error occurred:", error);
                alert("An unexpected error occurred. Please try again later.");
            });
    }

    function doctorStatus(dId) {
        var id = $("#customSwitch3_" + dId).prop("checked");
        if (id == true) {
            id = 1;

        }
        else {
            id = 0;
        }
        var param = {
            DrId: dId,
            Status: id,
        };
        console.log(param);
        $.post("/Employee/UpdateEmployeeStatus", param).done(function () {
            alert("succrssfully update");

        }).fail(function () {
            alert("error");

        })
    }


    function addDoctor() {
        // Collect form data
        let doctorData = {
            Name: $("#Name").val(),
            Phone: $("#Phone").val(),
            Email: $("#Email").val(),
            DateOfBirth: $("#DateOfBirth").val(),
            Specialization: $("#Specialization").val(),
            Qualifications: $("#Qualifications").val(),
            Gender: $("#Gender").val(),
            Affiliations: $("#Affiliations").val(),
            Languages: $("#Languages").val(),
            ConsultationFee: $("#ConsultationFee").val(),
            Availability: $("#Availability").val(),
            Status: $("#IsActive").prop('checked')  // Corrected line
        };

        const formData = new FormData();
        formData.append("doctorData", JSON.stringify(doctorData));  // Corrected line
        formData.append("file", $("#file").prop('files')[0]);

        // Debug: Log the formData contents
        for (const pair of formData.entries()) {
            console.log(pair[0] + ': ' + pair[1]);
        }

        $.ajax({
            url: '/D-AddOrUpdate',
            type: 'POST',
            data: formData,
            contentType: false,
            processData: false,
            success: function (result) {
                Info(result.statusCode, result.responseText);
            },
            error: function () {
                showerrors("Something went wrong!!!");
            }
        });
    }

</script>