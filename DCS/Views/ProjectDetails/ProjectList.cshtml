<div id="project_modalPV"></div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    function Onload() {
        var param = {
            name: $("#txtname").val(),
        }
        $.post('/_ProjectList', param).done(function (res) {
            $("#pList").html(res);
        }).fail(function () {
            alert("error");
        });
    }
    Onload();
    function editProject(pId) {
        let param = {
            id: pId,
        };
        $.get("/EditProject", param).done(function (res) {
            console.log(res);
            $("#project_modalPV").html(res);
            $("#AddProjectmodal").modal("show");
        }).fail(function (hxr) {
            console.log(hxr);
            alert("errror");
        })
    }
    function addProject() {
        debugger;
       var  status =0;
       var  PStatus= $("#Status").prop('checked');
        if(PStatus){
         status = 1;
        }
        else{
            status = 0;
        }
        const projectData = {
            ProjectId: $("#ProjectId").val(),
            Name: $("#Name").val(),
            PhoneNo: $("#Phone").val(),
            Email: $("#Email").val(),
            ProjectName: $("#ProjectName").val(),
            DomainName: $("#DomainName").val(),
            Status: status 
        };

        const formData = new FormData();
        formData.append("projectData", JSON.stringify(projectData));
        formData.append("file", $("#file").prop('files')[0]);
        for (const pair of formData.entries()) {
            console.log(pair[0] + ': ' + pair[1]);
        }

        $.ajax({
            url: '/AddOrUpdateProject',
            type: 'POST',
            data: formData,
            contentType: false,
            processData: false,
            success: function (result) {
                setTimeout(function () {
                    Info(result.statusCode, result.responseText);
                }, 1000);
            },
            error: function () {
                showerrors("Something went wrong!!!");
            }
        });
    }
</script>