<script>
    function Onload() {
        var param = {
            name: $("#txtname").val(),
        }
        $.post('/_ProjectList', param).done(function (res) {
            $("#pList").html(res);
        }).fail(function () {
            alert("error");
        });
    }
    Onload();
    function editProject(pId) {
        let param = {
            id: pId,
        };
        $.post("/EditProject", param).done(function (res) {
            debugger;
           
            $("#project_modalPV").html(res);
            $("#AddProjectmodal").modal("show");
        }).fail(function (hxr) {
            console.log(hxr);
            alert("errror");
        })
    }
    function ProjectDetails(pId) {
        let param = {
            id: pId,
        };
        $.post("/ProjectDetails", param).done(function (res) {
            debugger;
            console.log(res);
            $("#project_modalPV").html(res);
            $("#projectdetails").modal("show");
        }).fail(function (hxr) {
            console.log(hxr);
            alert("errror");
        })
    }
    function changeProject_Status(Id) {
        var status = $("#IsVerified_" + Id).prop('checked');
        let value = 0;
        if (status==true) 
        {
            value = 1;
        }

        let param = {
            Id: Id,
            Status: value,
        };
        $.post("/Project_Status", param)
            .done(function (result) {
                Info(result.statusCode, result.responseText);
                Onload();
            })
            .fail(function (xhr) {
                Info(-1, xhr.responseText);
            });
    }



    function addProject() {
        debugger;
       var  status =0;
       var  PStatus= $("#Status").prop('checked');
        if(PStatus){
         status = 1;
        }
        else{
            status = 0;
        }
        const projectData = {
            ProjectId: $("#ProjectId").val(),
            ProjectName: $("#ProjectName").val(),
            Id: 0 ,
            EmailLogo: $("#file").val(),
        };

        const formData = new FormData();
        formData.append("projectData", JSON.stringify(projectData));
        formData.append("file", $("#file").prop('files')[0]);
        for (const pair of formData.entries()) {
            console.log(pair[0] + ': ' + pair[1]);
        }

        $.ajax({
            url: '/AddOrUpdateProject',
            type: 'POST',
            data: formData,
            contentType: false,
