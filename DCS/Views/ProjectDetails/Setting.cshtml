			MaxLoginAttempts: !!$("#MaxLoginAttempts").prop("checked"),
			IsBackUpService: !!$("#IsBackUpService").prop("checked"),
			IsSmsNotificationEnabled: !!$("#IsSmsNotificationEnabled").prop("checked"),
			IsAppointmentReminderEnabled: !!$("#IsAppointmentReminderEnabled").prop("checked"),
			IsDoctorAvailabilityNotificationEnabled: !!$("#IsDoctorAvailabilityNotificationEnabled").prop("checked"),
			IsLabResultsNotificationEnabled: !!$("#IsLabResultsNotificationEnabled").prop("checked"),
			IsMSServiceEnabled: !!$("#IsMSServiceEnabled").prop("checked"),
			IsBillingNotificationEnabled: !!$("#IsBillingNotificationEnabled").prop("checked"),
			IsPrescriptionRefillReminderEnabled: !!$("#IsPrescriptionRefillReminderEnabled").prop("checked"),
			IsPatient: !!$("#IsPatient").prop("checked"),
			IsDoctor: !!$("#IsDoctor").prop("checked"),
			SuperAdmin: !!$("#SuperAdmin").prop("checked"),
			IsAdmin: !!$("#IsAdmin").prop("checked"),
			IsLabManagmentService: !!$("#IsLabManagmentService").prop("checked"),
			IsLowStorageMedicineNotification: !!$("#IsLowStorageMedicineNotification").prop("checked"),
			IsAppointmentContactService: !!$("#IsAppointmentContactService").prop("checked"),
			IsAppointmentFormService: !!$("#IsAppointmentFormService").prop("checked"),
			IsAppointmentStatus: !!$("#IsAppointmentStatus").prop("checked"),
			IsWhatsappMarketing: !!!!$("#IsWhatsappMarketing").prop("checked"),
		};

		console.table(param);
		$.post('/AddOrUpdateAppSetting', param).done(function (res) {
			Info(res.statusCode, res.responseText);

