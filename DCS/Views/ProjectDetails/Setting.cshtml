			IsSocialAlert: !!$("#IsSocialAlert").prop("checked"),
			IsDarkModeEnabled: !!$("#IsDarkModeEnabled").prop("checked"),
			IsEmailVerificationRequired: !!$("#IsEmailVerificationRequired").prop("checked"),
