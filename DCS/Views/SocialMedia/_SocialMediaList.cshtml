@model IEnumerable<Entities.SocialMedia>

@{
    ViewData["Title"] = "_SocialMediaList";
    Layout = null;
    var Ischecked = "";
}
@if (Model == null || !Model.Any())
{
    <tr style="text-align: center;">
        <td colspan="12" style="text-align: center;">
            <label><strong>Data Not Found</strong></label>
        </td>
    </tr>
}
else
{
@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.SMId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PlateformName)
        </td>
        <td>
                <a href="@item.PlateformLink" target="_blank">@item.PlateformName</a>

        </td>
        <td>
                <a class="fancybox" href="@item.Icons" data-fancybox data-caption="@item.PlateformName">
                    <img src="@item.Icons" onerror="this.onerror=null;this.src='/images/noimage.jpg'" class="img-fluid rounded-circle" alt="No Image Found" width="90px" height="50px" />
                </a>
        </td>
            <td>
                <div class="form-check form-switch">
                    @if (@item.Status==true)
                    {
                        Ischecked = "checked";
                    }
                    else
                    {
                        Ischecked = "";
                    }
                    <input type="checkbox" name="switch3" onchange="changeHS_Status(@item.SMId)" id="IsVerified_@item.SMId" data-switch="success" @Ischecked disabled>
                    <label for="IsVerified_@item.SMId" data-on-label="ON" data-off-label="OFF"></label>
                </div>
            </td>
            <td class="table-action">
                <a href="javascript:void(0);" class="action-icon"> <i class="mdi mdi-square-edit-outline" onclick="editSocialMedia(@item.SMId)"></i></a>
            </td>
    </tr>
}
}
