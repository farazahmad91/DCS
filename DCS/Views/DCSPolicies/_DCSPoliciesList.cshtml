@model IEnumerable<Entities.DCSPolicies>

@{
    ViewData["Title"] = "DCSPoliciesList";
    Layout = null;
    var Ischecked = "";
}
@if (Model == null || !Model.Any())
{
    <tr style="text-align: center;">
        <td colspan="12" style="text-align: center;">
            <label><strong>Data Not Found</strong></label>
        </td>
    </tr>
}
else
{
@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PolicyId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PolicyName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UpdateDate)
        </td>
            <td>
                <div class="form-check form-switch">
                    @if (@item.Status==true)
                    {
                        Ischecked = "checked";
                    }
                    else
                    {
                        Ischecked = "";
                    }
                    <input type="checkbox" name="switch3" onchange="changeDCSStatus(@item.PolicyId)" id="IsVerified_@item.PolicyId" data-switch="success" @Ischecked>
                    <label for="IsVerified_@item.PolicyId" data-on-label="ON" data-off-label="OFF"></label>
                </div>
            </td>
            <td class="table-action">
                <a href="javascript:void(0);" class="action-icon"> <i class="mdi mdi-square-edit-outline" onclick="editApplicationPolicy(@item.PolicyId)"></i></a>
            </td>
    </tr>
}
}