<div id="med_modalPV"></div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    function Onload() {
        var param = {
            name: $("#txtname").val(),
        }
        $.post('/Medicine_List', param).done(function (res) {
            $("#medList").html(res);
        }).fail(function () {
            alert("error");
        });
    }
    Onload();
    function medDetails(Id) {
        let param = {
            id: Id,
        };
        $.post("/details", param)
            .done(function (res) {
                $("#med_modalPV").html(res);
                $("#med_detailmodal").modal("show");
            })
            .fail(function () {
                alert("error");
            });
    }

    function editMed(dId) {
        let param = {
            id: dId,
        };
        $.get("/EditMedicines", param).done(function (res) {
            $("#med_modalPV").html(res);
            $("#med_Editmodal").modal("show");
        }).fail(function (hxr) {
            console.log(hxr);
            alert("errror");
        })
    }

    function addMedicine() {
        const
            id = $("#MedicineID").val(),
            name = $("#Name").val(),
            description = $("#Description").val(),
            manufacturer = $("#Manufacturer").val(),
            medTypeID = $("#MedTypeID").val(),
            price = $("#Price").val(),
            quantity = $("#Quantity").val(),
            expiryDate = $("#ExpiryDate").val();

        const medicine = {
            MedicineID:id,
            Name: name,
            Description: description,
            Manufacturer: manufacturer,
            MedTypeID: medTypeID,
            Price: price,
            Quantity: quantity,
            ExpiryDate: expiryDate
        };

        $.post('/AddOrUpdateMedicines', medicine)
            .done(function (result) {
                setTimeout(function () {
                    Info(result.statusCode, result.responseText);
                }, 1000);
            })
            .fail(function () {
                alert("error");
            });
    }

</script>