<script>
    var quill = new Quill('#editor', {
        modules: {
            toolbar: [
                ['bold', 'italic', 'underline'], // Text formatting options
                [{ 'header': 1 }, { 'header': 2 }], // Header formatting options
                [{ 'list': 'ordered' }, { 'list': 'bullet' }], // List options
                [{ 'indent': '-1' }, { 'indent': '+1' }], // Indentation options
                [{ 'direction': 'rtl' }], // Text direction
                [{ 'size': ['small', false, 'large', 'huge'] }], // Font size options
                [{ 'color': [] }, { 'background': [] }], // Text color and background color
                [{ 'align': [] }] // Text alignment
            ]
        },
        theme: 'snow' // Use 'snow' theme (you can switch to 'bubble' if preferred)
    });
    $(document).ready(function () {
       
            $("#sendButton").click(function () {
                if (IsValidate()) {
                    const formData = new FormData();
                    formData.append("ToEmail", $("#ToEmail").val());
                    formData.append("Subject", $("#mailsubject").val());
                    formData.append("Message", $("#editor").html());
                    const fileInput = $("#file").prop('files')[0];
                    if (fileInput) {
                        formData.append("imageFile", fileInput);
                    }
                    Show_Loader();
                    $.ajax({
                        url: '/Compose',
                        type: 'POST',
                        data: formData,
                        processData: false,
                        contentType: false,
                        success: function (response) {
                            Hide_Loader();
                            Info(response.statusCode, response.responseText);
                        },
                        error: function (xhr, status, error) {
                            alert("Error sending email: " + error);
                        }
                    });
                }
            });
        
    });

    const getEmailDetail = () => {
        const param = {
            Id: 0,
            name: 'All'
        };

        $.post('/GetComposeEmail', param)
            .done((res) => {
                alert("suc.");
                console.table(res);
                $("#emaillist").html(res);
            })
            .fail(() => {
                // Show an error message in case of failure
                alert("Error occurred while fetching email details.");
            });
    };


    getEmailDetail();
</script>