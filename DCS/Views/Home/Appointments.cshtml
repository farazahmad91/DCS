@{
    ViewData["Title"] = "Appointments";
    Layout = "_LayoutSiteAdmin";
}

<!-- Hero Start -->
<div class="container-fluid bg-primary py-5 hero-header mb-5">
    <div class="row py-3">
        <div class="col-12 text-center">
            <h1 class="display-3 text-white animated zoomIn">Appointment</h1>
            <a href="" class="h4 text-white">Home</a>
            <i class="far fa-circle text-white px-2"></i>
            <a href="" class="h4 text-white">Appointment</a>
        </div>
    </div>
</div>
<!-- Hero End -->
<!-- Appointment Start -->
<div class="container-fluid bg-primary bg-appointment mb-5 wow fadeInUp" data-wow-delay="0.1s" style="margin-top: 90px;">
    <div class="container">
        <div class="row gx-5">
            <div class="col-lg-6 py-5">
                <div class="py-5">
                    <h1 class="display-5 text-white mb-4">We Are A Certified and Award Winning Dental Clinic You Can Trust</h1>
                    <p class="text-white mb-0">At DCS, we understand the importance of providing top-notch dental care that you can trust. With our team of experienced professionals, cutting-edge technology, and commitment to excellence, we strive to ensure that every patient receives the highest quality treatment in a comfortable and welcoming environment.</p>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="appointment-form h-100 d-flex flex-column justify-content-center text-center p-5 wow zoomIn" data-wow-delay="0.6s">
                    <h1 class="text-white mb-4">Make Appointment</h1>
                    <form>
                        <div class="row g-3">
                            <div class="col-12 col-sm-6">
                                <select class="form-select bg-light border-0" id="ddlservice" style="height: 55px;">
                                    <option selected>Select A Service</option>
                                    <option value="1">Service 1</option>
                                    <option value="2">Service 2</option>
                                    <option value="3">Service 3</option>
                                </select>
                            </div>
                            <div class="col-12 col-sm-6">
                                <select class="form-select bg-light border-0" id="ddldoctor" style="height: 55px;">
                                    <option selected>Select Doctor</option>
                                    <option value="1">Doctor 1</option>
                                    <option value="2">Doctor 2</option>
                                    <option value="3">Doctor 3</option>
                                </select>
                            </div>
                            <div class="col-12 col-sm-6">
                                <input type="text" class="form-control bg-light border-0" id="txtname" placeholder="Your Name" style="height: 55px;">
                            </div>
                            <div class="col-12 col-sm-6">
                                <input type="email" class="form-control bg-light border-0" id="txtemail" placeholder="Your Email" style="height: 55px;">
                            </div>
                            <div class="col-12 col-sm-6">
                                <input type="number" class="form-control bg-light border-0" min="10" id="txtnum" maxlength="10" placeholder="Your Phone No." style="height: 55px;">
                            </div>
                            <div class="col-12 col-sm-6">
                                <div class="date" id="date1" data-target-input="nearest">
                                    <input type="text"
                                           class="form-control bg-light border-0 datetimepicker-input"
                                           placeholder="Appointment Date" data-target="#date1" data-toggle="datetimepicker" style="height: 55px;">
                                </div>
                            </div>
                            <div class="col-12">
                                <button class="btn btn-dark w-100 py-3" onclick="TakeAppointment();" type="submit">Make Appointment</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    function TakeAppointment() {
        // Ensure the formData object is initialized
        var formData = new FormData();

        // Collect data from the form fields
        var appointmentData = {
            DrId: $("#ddldoctor").val(),
            ServiceId: $("#ddlservice").val(),
            Name: $("#txtname").val(),
            Email: $("#txtemail").val(),
            PhoneNo: $("#txtnum").val(), // Assuming txtnum is the correct ID for the phone number
            Date: $(".datetimepicker-input").val() // Make sure this is the correct selector for the date
        };

        // Append the JSON stringified appointment data to the formData
        formData.append("appointmentData", JSON.stringify(appointmentData));

        // Send the data using AJAX
        $.ajax({
            url: '/A-AddOrUpdate',
            type: 'POST',
            data: formData,
            contentType: false, // Required for FormData
            processData: false, // Required for FormData
            success: function (result) {
                setTimeout(function () {
                    Info(result.statusCode, result.responseText);
                }, 1000);
            },
            error: function () {
                showerrors("Something went wrong!!!");
            }
        });
    }

</script>