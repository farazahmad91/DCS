@model Entities.PlanServices
@{
    Layout = null;
}
<div class="card-body">
    <!-- Modal -->
    <div class="modal fade" id="Plan_Editmodal" tabindex="-1" aria-labelledby="Plan_EditmodalTitle" style="display: none;" aria-hidden="true">
        <div class="modal-dialog modal-dialog-scrollable modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="Plan_EditmodalTitle">Add or Update Plan</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div id="serviceForm">
                        <input type="hidden" class="form-control" asp-for="ServiceID" name="ServiceID">
                        <div class="row g-2">
                            <div class="mb-3 col-md-6">
                                <label for="ServiceName" class="form-label">Service Name</label>
                                <input type="text" class="form-control" asp-for="ServiceName" name="ServiceName" placeholder="Service Name">
                            </div>
                            <div class="mb-3 col-md-6">
                                <label for="Description" class="form-label">Description</label>
                                <input type="text" class="form-control" asp-for="Description" name="Description" placeholder="Description">
                            </div>
                        </div>
                        <div class="row g-2">
                            <div class="mb-3 col-md-6">
                                <label for="Price" class="form-label">Price</label>
                                <input type="number" class="form-control" asp-for="Price" name="Price" placeholder="Price">
                            </div>
                            <div class="mb-3 col-md-6">
                                <label for="LastPrice" class="form-label">Last Price</label>
                                <input type="number" class="form-control" asp-for="LastPrice" name="LastPrice" placeholder="Last Price">
                            </div>
                        </div>
                        <div class="row g-2">
                            <div class="mb-3 col-md-6">
                                <label for="Duration" class="form-label">Duration</label>
                                <input type="number" class="form-control" asp-for="Duration" name="Duration" placeholder="Duration">
                            </div>
                            <div class="mb-3 col-md-6">
                                <label for="Discounts" class="form-label">Discounts</label>
                                <input type="number" class="form-control" asp-for="Discounts" name="Discounts" placeholder="Discounts">
                            </div>
                        </div>
                        <div class="row g-2">
                            <div class="mb-3 col-md-6">
                                <label for="CustomerSupportLevel" class="form-label">Customer Support Level</label>
                                <input type="text" class="form-control" asp-for="CustomerSupportLevel" name="CustomerSupportLevel" placeholder="Customer Support Level">
                            </div>
                            <div class="mb-3 col-md-6">
                                <label for="TermsAndConditions" class="form-label">Terms and Conditions</label>
                                <input type="text" class="form-control" asp-for="TermsAndConditions" name="TermsAndConditions" placeholder="Terms and Conditions">
                            </div>
                        </div>

                        <div class="row g-2">
                            <div class="mb-3 col-md-6">
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" role="switch" id="EmailVerificationService" @Html.Raw(Model.EmailVerificationService==true ? "checked" : "")>
                                    <label class="form-check-label" for="EmailVerificationService">Email Verification Service</label>
                                </div>
                            </div>
                            <div class="mb-3 col-md-6">
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" role="switch" id="ShowYourUserPassword" @Html.Raw(Model.ShowYourUserPassword==true ? "checked" : "")>
                                    <label class="form-check-label" for="ShowYourUserPassword">Show Your User Password</label>
                                </div>
                            </div>
                        </div>
                        <div class="row g-2">
                            <div class="mb-3 col-md-6">
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" role="switch" id="ReferralService" @Html.Raw(Model.ReferralService==true ? "checked" : "")>
                                    <label class="form-check-label" for="ReferralService">Referral Service</label>
                                </div>
                            </div>
                            <div class="mb-3 col-md-6">
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" role="switch" id="BackUpService" @Html.Raw(Model.BackUpService==true ? "checked" : "")>
                                    <label class="form-check-label" for="BackUpService">BackUp Service</label>
                                </div>
                            </div>
                        </div>
                        <div class="row g-2">
                            <div class="mb-3 col-md-6">
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" role="switch" id="SmsNotificationService" @Html.Raw(Model.SmsNotificationService==true ? "checked" : "")>
                                    <label class="form-check-label" for="SmsNotificationService">Sms Notification Service</label>
                                </div>
                            </div>
                            <div class="mb-3 col-md-6">
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" role="switch" id="UserAppointmentReminderService" @Html.Raw(Model.UserAppointmentReminderService==true ? "checked" : "")>
                                    <label class="form-check-label" for="UserAppointmentReminderService">User Appointment Reminder Service</label>
                                </div>
                            </div>
                        </div>
                        <div class="row g-2">
                            <div class="mb-3 col-md-6">
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" role="switch" id="DoctorAvailabilityNotificationService" @Html.Raw(Model.DoctorAvailabilityNotificationService==true ? "checked" : "")>
                                    <label class="form-check-label" for="DoctorAvailabilityNotificationService">Doctor Availability Notification Service</label>
                                </div>
                            </div>
                            <div class="mb-3 col-md-6">
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" role="switch" id="MedicineStoreManagementService" @Html.Raw(Model.MedicineStoreManagementService==true ? "checked" : "")>
                                    <label class="form-check-label" for="MedicineStoreManagementService">Medicine Management Service</label>
                                </div>
                            </div>
                        </div>
                        <div class="row g-2">
                            <div class="mb-3 col-md-6">
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" role="switch" id="TwoFactorAuthenticationService" @Html.Raw(Model.TwoFactorAuthenticationService==true ? "checked" : "")>
                                    <label class="form-check-label" for="TwoFactorAuthenticationService">TwoFactor Authentication Service</label>
                                </div>
                            </div>
                            <div class="mb-3 col-md-6">
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" role="switch" id="IsLabManagmentService" @Html.Raw(Model.IsLabManagmentService==true ? "checked" : "")>
                                    <label class="form-check-label" for="IsLabManagmentService">Lab Managment Service</label>
                                </div>
                            </div>
                        </div>
                        <div class="row g-2">
                            <div class="mb-3 col-md-6">
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" role="switch" id="IsLowStorageMedicineNotification" @Html.Raw(Model.IsLowStorageMedicineNotification==true ? "checked" : "")>
                                    <label class="form-check-label" for="IsLowStorageMedicineNotification">Low Storage Medicine Notification</label>
                                </div>
                            </div>
                            <div class="mb-3 col-md-6">
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" role="switch" id="IsAppointmentContactService" @Html.Raw(Model.IsAppointmentContactService==true ? "checked" : "")>
                                    <label class="form-check-label" for="IsAppointmentContactService">Appointment Contact Service</label>
                                </div>
                            </div>
                        </div>
                        <div class="row g-2">
                            <div class="mb-3 col-md-6">
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" role="switch" id="IsAppointmentFormService" @Html.Raw(Model.IsAppointmentFormService==true ? "checked" : "")>
                                    <label class="form-check-label" for="IsAppointmentFormService">Appointment Form Service</label>
                                </div>
                            </div>
                            <div class="mb-3 col-md-6">
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" role="switch" id="IsAppointmentStatus" @Html.Raw(Model.IsAppointmentStatus==true ? "checked" : "")>
                                    <label class="form-check-label" for="IsAppointmentStatus">Appointment Status</label>
                                </div>
                            </div>
                        </div>
                        <div class="row g-2">
                            <div class="mb-3 col-md-6">
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" role="switch" id="IsWhatsappMarketing" @Html.Raw(Model.IsWhatsappMarketing==true ? "checked" : "")>
                                    <label class="form-check-label" for="IsWhatsappMarketing">Whatsapp Marketing</label>
                                </div>
                            </div>
                            <div class="mb-3 col-md-6">
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" role="switch" id="EmailMarketing" @Html.Raw(Model.EmailMarketing==true ? "checked" : "")>
                                    <label class="form-check-label" for="EmailMarketing">Email Marketing</label>
                                </div>
                            </div>
                        </div>
                        <div class="row g-2">
                            <div class="mb-3 col-md-6">
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" role="switch" id="RenewalOption" @Html.Raw(Model.RenewalOption==true ? "checked" : "")>
                                    <label class="form-check-label" for="RenewalOption">Renewal Option</label>
                                </div>
                            </div>
                        </div>
                        <div class="row g-2">
                            <div class="mb-3 col-md-6">
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" role="switch" id="IsDarkModeEnabled" @Html.Raw(Model.IsDarkModeEnabled==true ? "checked" : "")>
                                    <label class="form-check-label" for="IsDarkModeEnabled">Dark Mode</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-secondary" onclick="AddorUpdatePlan();">
                            @if (Model != null && Model.ServiceID != null)
                            {
                                <text>Update</text>
                            }
                            else
                            {
                                <text>Save</text>
                            }
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
